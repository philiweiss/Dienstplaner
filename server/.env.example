# MySQL connection
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=dienstplaner

# Server
PORT=4000

# CORS: comma-separated allowed origins (dev + prod)
CORS_ORIGINS=http://localhost:3000,https://dev.wproducts.de

# Optional: Public base URL of the server (used to build absolute ICS URLs)
# Example: https://dev.wproducts.de
BASE_URL=

# Optional: Timezone identifier for calendar export
# Default: Europe/Berlin
TIMEZONE=Europe/Berlin

# WebAuthn / Passkeys (optional, recommended in production)
# RP_ID should be the effective domain (no protocol, no port), e.g. dev.wproducts.de or localhost
RP_ID=
# RP_ORIGIN is the full origin including protocol and optional port, e.g. https://dev.wproducts.de or http://localhost:4000
# If not set, it will be derived from the incoming request headers
RP_ORIGIN=
# RP_NAME shown to the user during registration
RP_NAME=IT-Dienstplaner
